@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4500">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/ultra_sharp.png" alt="Monitor" class="img-responsive d-block w-100" />
            <div class="carousel-caption d-none d-md-block" role="option">
                <p>
                    Ultrasharp resolution satisfys all needs.
                    <a class="btn btn-outline-light" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/surface_studio.jpg" alt="Surface Studio" class="img-responsive d-block w-100" />
            <div class="carousel-caption d-none d-md-block" role="option">
                <p>
                    Powerful all in one desktop has touch screen.
                    <a class="btn btn-outline-light" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/smart_phones.jpg" alt="Smartphones" class="img-responsive d-block w-100" />
            <div class="carousel-caption d-none d-md-block" role="option">
                <p>
                    All kinds of newest generation smartphones.
                    <a class="btn btn-outline-light" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 w-75 text-center">
    <h1 class="display-4">Pricing</h1>
    <p class="lead">Quickly choose a most suitable pricing plan that meet your potential needs. It’s free to start with a 30 days trial.</p>
</div>

<div class="container px-5">
    <div class="row">
    <div class="card-deck mb-3 text-center">
        <div class="card mb-4 shadow-sm col-md-4 rounded-pill border border-primary">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Free</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$0 <small class="text-muted">/ mo</small></h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>1 free trial</li>
                    <li>30 days trial</li>
                    <li>Email support</li>
                    <li>Help center access</li>
                </ul>
                <button type="button" class="btn btn-lg btn-outline-primary w-50">Sign up for free</button>
            </div>
        </div>
        <div class="card mb-4 shadow-sm col-md-4 rounded-pill border border-primary">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Pro</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$25 <small class="text-muted">/ mo</small></h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>3 users included</li>
                    <li>Up to 10 devices</li>
                    <li>Priority email support</li>
                    <li>Help center access</li>
                </ul>
                <button type="button" class="btn btn-lg btn-primary w-50">Get started</button>
            </div>
        </div>
        <div class="card mb-4 shadow-sm col-md-4 rounded-pill border border-primary">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Enterprise</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$59 <small class="text-muted">/ mo</small></h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>10 users included</li>
                    <li>Up to 35 devices</li>
                    <li>Phone and email support</li>
                    <li>Help center access</li>
                </ul>
                <button type="button" class="btn btn-lg btn-primary w-50">Contact us</button>
            </div>
        </div>
    </div>
    </div>
</div>
